@model HumanResource.Models.RegistrationViewModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>


<div class="col-md-9">

    <form id="myForm">
    
    
    
        <div class="col-md-12">
            <h4> Login Here</h4>
        </div>
        
        <div class=" form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m=>m.EmailId, new { @class="form-control", @placeholder="EmailId"})
            </div>
        </div>
        
        
        <div class="form-group">
            <div class="col-md-12">
                @Html.TextBoxFor(m=>m.Password, new {@class="form-control", @placeholder="Password"})
            </div>

        </div>
        
        
        <div class="form-group">
            <div class="col-md-12">
                <a href="#", class="btn btn-primary" onClick="LoginUser()">Submit</a>
            </div>
        </div>

    
    </form>

</div>



<script>

    var LoginUser=function() {

    var data = $("#myForm").serialize();


        $.ajax({
            type: "Post",
            url: "/Login/LoginUser",
            data: data,
            success: function(response) {

                if (response == "fail") {
                    window.location.href = "/login/Login";
                } else if (response == "GeneralUser") {
                    window.location.href = "/GeneralUser/GeneralUser";
                } else if (response == "Admin") {
                    window.location.href = "/Admin/Admin";
                } else if (response == "SuperAdmin") {
                    window.location.href = "/SuperAdmin/SuperAdmin";
                } else {
                    window.location.href = "/Home/index";
                }
            }


        });

    }


    </script>
